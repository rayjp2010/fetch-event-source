{
    "compilerOptions": {
        "target": "ES2017",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "rootDir": "src",
        "outDir": "lib/cjs",
        "declaration": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "strict": true,
        "removeComments": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "lib": [
            "DOM",
            "ES2018"
        ]
    },
    "include": ["src"],
    "exclude": ["test", "node_modules"]
}
